{
  "name": "ducksy-app",
  "version": "1.0.0",
  "description": "AI-powered note-taking and screen capture assistant",
  "author": "Ducksy Team",
  "main": "index.js",
  "dependencies": {
    "@notionhq/client": "^5.9.0",
    "dotenv": "^17.2.3",
    "electron-serve": "^3.0.1",
    "google-auth-library": "^10.5.0",
    "googleapis": "^171.4.0",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "electron": "^35.0.0",
    "electron-builder": "^26.4.0"
  },
  "scripts": {
    "electron": "electron .",
    "build": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.ducksy.app",
    "productName": "Ducksy",
    "asar": true,
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist/**",
      "!*.db"
    ],
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns",
      "category": "public.app-category.productivity"
    }
  }
}
