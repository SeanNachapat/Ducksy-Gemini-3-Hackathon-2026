{
  "name": "ducksy-app",
  "version": "1.0.0",
  "description": "AI-powered note-taking and screen capture assistant",
  "author": "Ducksy Team",
  "main": "index.js",
  "dependencies": {
    "@notionhq/client": "^5.9.0",
    "dotenv": "^17.2.3",
    "electron-serve": "^3.0.1",
    "googleapis": "^171.4.0",
    "jimp": "^0.22.12",
    "png-to-ico": "^3.0.1",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "electron": "^35.0.0",
    "electron-builder": "^26.4.0"
  },
  "scripts": {
    "electron": "electron .",
    "build": "electron-builder",
    "build:ui": "cd ../ducksy-ui && npm run build",
    "build:all": "npm run build:ui && electron-builder",
    "build:mac": "npm run build:ui && electron-builder --mac",
    "build:win": "npm run build:ui && electron-builder --win",
    "build:linux": "npm run build:ui && electron-builder --linux",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.ducksy.app",
    "productName": "Ducksy",
    "asar": true,
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist/**",
      "!*.db"
    ],
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/icon_square.png",
      "category": "public.app-category.productivity",
      "darkModeSupport": true
    },
    "dmg": {
      "title": "${productName} ${version}",
      "icon": "assets/icon_square.png",
      "iconSize": 100,
      "window": {
        "width": 540,
        "height": 380
      },
      "contents": [
        {
          "x": 140,
          "y": 180,
          "type": "file"
        },
        {
          "x": 400,
          "y": 180,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/icon_square.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Ducksy"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/icon_square.png",
      "category": "Utility"
    }
  }
}